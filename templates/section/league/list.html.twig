{% extends 'layouts/list.html.twig' %}

{% block _navbar_controls %}
    <ul class="nav navbar-nav mr-auto">
        <li class="nav-item">
            <a href="{{ path('app.league.manage') }}"
               class="btn btn-info btn-fill">
                Add new league
            </a>
        </li>
    </ul>
{% endblock %}

{% block list_label %}List of leagues{% endblock %}

{% block table_body %}
    <div class="card-body table-full-width table-responsive">

        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Country</th>
                <th>Association</th>
                <th>League rank</th>
                <th>Max club #</th>
                <th>Manage</th>
            </tr>
            </thead>
            <tbody>
            {% for league in leagues %}
                <tr>
                    <td>{{ league.id }}</td>
                    <td>{{ league.name }}</td>
                    <td>{{ league.country.name }}</td>
                    <td>{{ league.country.association.name }}</td>
                    <td>{{ league.leagueRanking }}</td>
                    <td>{{ league.numberOfClubs }}</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}