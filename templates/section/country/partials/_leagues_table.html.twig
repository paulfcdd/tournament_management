<div class="col-md-6">
    <h5 class="pull-left">Leagues</h5>
    <a class="pull-right" href="{{ path('app.country.add_league', {'country': country.id}) }}">Add league</a>
    <table class="table table-hover table-striped">
        <thead>
        <tr><th>ID</th>
            <th>Name</th>
            <th>League rank</th>
            <th>Max num of clubs</th>
            <th>Clubs</th>
        </tr></thead>
        <tbody>
        {% for league in leagues %}
            <tr>
                <td>{{ league.id }}</td>
                <td>{{ league.name }}</td>
                <td>{{ league.leagueRanking }}</td>
                <td>{{ league.numberOfClubs }}</td>
                <td>0</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>