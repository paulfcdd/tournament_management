{% extends 'layouts/list.html.twig' %}

{% set continents = constant('App\\Entity\\Association::CONTINENTS') %}

{% block _navbar_controls %}
    <ul class="nav navbar-nav mr-auto">
        <li class="nav-item">
            <a href="{{ path('app.association.manage') }}"
               class="btn btn-info btn-fill">
                Add new association
            </a>
        </li>
    </ul>
{% endblock %}

{% block list_label %}List of associations{% endblock %}

{% block table_body %}
    <div class="card-body table-full-width table-responsive">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Continent</th>
                <th># of members</th>
                <th>Manage</th>
            </tr>
            </thead>
            <tbody>
            {% for association in associations %}
                <tr>
                    <td>{{ association.id }}</td>
                    <td>{{ association.name }}</td>
                    <td>{{ continents[association.continent] }}</td>
                    <td>{{ association.countries | length }}</td>
                    <td></td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}